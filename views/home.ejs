<!-- replace space to dash -->
<% const kebabCase = function(title) {
    return title.replace(/([a-z])([A-Z])/g, "$1-$2")
    .replace(/[\s_]+/g, '-')
    .toLowerCase();
} %>

<h1>Home</h1>
<p><%= content %> </p>

